{
    "name": "Invisibility",
    "description": "You can make yourself invisible on command. It lasts for a finite amount of time. Try not to get hurt!",
    "type": "origins:multiple",
    "resource": {
        "type": "origins:resource",
        "hud_render": {
            "sprite_location": "origins:textures/gui/community/huang/resource_bar_02.png",
            "bar_index": 0,
            "should_render": true
        },
        "min": 0,
        "max": 100,
        "start_value": 100,
        "min_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:change_resource",
                    "resource": "dredgeorigins:azure/invis_can-use",
                    "change": 0,
                    "operation": "set"
                },
                {
                    "type": "origins:toggle",
                    "power": "dredgeorigins:azure/invis_toggle"
                }
            ]
        },
        "max_action": {
            "type": "origins:change_resource",
            "resource": "dredgeorigins:azure/invis_can-use",
            "change": 1,
            "operation": "set"
        }
    },
    "over-time": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:power_active",
                "power": "dredgeorigins:azure/invis_toggle"
            },
            "if_action": {
                "type": "origins:change_resource",
                "resource": "dredgeorigins:azure/invis_resource",
                "change": -3,
                "operation": "add"
            },
            "else_action": {
                "type": "origins:change_resource",
                "resource": "dredgeorigins:azure/invis_resource",
                "change": 1,
                "operation": "add"
            }
        },
        "interval": 40
    },
    "can-use": {
        "type": "origins:resource",
        "hud_render": {
            "should_render": false
        },
        "min": 0,
        "max": 1,
        "start_value": 1
    },
    "toggle": {
        "type": "origins:toggle",
        "active_by_default": false,
        "key": "key.origins.ternary_active",
        "condition": {
            "type": "origins:resource",
            "resource": "dredgeorigins:azure/invis_can-use",
            "compare_to": 1,
            "comparison": "=="
        }
    },
    "invis": {
        "type": "origins:invisibility",
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:power_active",
                    "power": "dredgeorigins:azure/invis_toggle"
                },
                {
                    "type": "origins:resource",
                    "compare_to": 0,
                    "comparison": ">",
                    "resource": "dredgeorigins:azure/invis_resource"
                },
                {
                    "type": "origins:resource",
                    "resource": "dredgeorigins:azure/invis_can-use",
                    "compare_to": 1,
                    "comparison": "=="
                }
            ]
        }
    },
    "damage": {
        "type": "origins:action_when_damage_taken",
        "cooldown": 5,
        "hud_render": {
            "should_render": false
        },
        "entity_action": {
            "type": "origins:change_resource",
            "change": -8,
            "operation": "add",
            "resource": "dredgeorigins:azure/invis_resource"
        },
        "condition": {
            "type": "origins:resource",
            "resource": "dredgeorigins:azure/invis_can-use",
            "compare_to": 1,
            "comparison": "=="
        }
    }
}